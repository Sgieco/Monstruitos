<!DOCTYPE html>
<html lang='en'>
<head>
    <%- include('../partials/head.ejs')%>
</head>
<body>
    <%- include('../partials/header.ejs')%>
    <main class='new-main font'>
        <h2 class='new-title'>CARGA DE PRODUCTOS</h2>
        <div class='errores'>
            <ul> 
               
            </ul>
        </div>
        
        <form action='/products/newProduct/' method='POST' class='new-form' enctype='multipart/form-data'>

            <div class='edit-space'>
                <input type='text' name='nombre' id='nombre' placeholder='Nombre del Producto' value='<%= locals.oldData ? oldData.nombre : null %>' class='<%= locals.errors && errors.nombre ? "is-invalid" : null %>' autofocus>
                <% if (locals.errors &&  errors.nombre){ %>
                            
                    <p style="color: #1A5276 ; font-family: Magra;"> <%= errors.nombre.msg %> </p>
                   
                <% } %>
            </div>
            
            <div class='edit-space'>
                <select name='categoria' id='categoria'>
                    <option value= '0' disabled selected>Categoria Principal</option>
                    <option value='1'>BEBES</option>
                    <option value='2'>NENES</option>
                    <option value='3'>NENAS</option>
                    <option value='4'>OFERTAS</option>
                </select>
                <% if (locals.errors &&  errors.categoria){ %>
                            
                    <p style="color: #1A5276 ; font-family: Magra;"> <%= errors.categoria.msg %></p>
                   
                <% } %>
            </div>

            <div class='edit-space'>
                <select name='subcategoria' id='subcategoria'>
                    <option value= '0' disabled selected>Categoria Secundaria</option>
                    <option value='1'>Remeras</option>
                    <option value='2'>Camisas y Blusas</option>
                    <option value='3'>Buzos y Sweaters</option>
                    <option value='4'>Camperas</option>
                    <option value='5'>Pantalones y Leggins</option>
                    <option value='6'>No tiene</option>
                </select>
                <% if (locals.errors &&  errors.subcategoria){ %>
                            
                    <p style="color: #1A5276 ; font-family: Magra;"> <%= errors.subcategoria.msg %></p>
                   
                <% } %>
            </div>

            <div class='edit-space'>
                <p>Foto del Producto</p>
                <input type='file' name='foto' id='foto' multiple>
                <% if (locals.errors &&  errors.foto){ %>
                            
                    <p style="color: #1A5276 ; font-family: Magra;"> <%= errors.foto.msg %></p>
                   
                <% } %>
            </div>

            <div class='edit-space'>
                <input type='number' name='precio' id='precio' placeholder='Precio' value='<%= locals.oldData ? oldData.precio : null %>' class='<%= locals.errors && errors.precio ? "is-invalid" : null %>'>
                <% if (locals.errors &&  errors.precio){ %>
                            
                    <p style="color: #1A5276 ; font-family: Magra;"> <%= errors.precio.msg %></p>
                   
                <% } %>
            </div>

            <div class='edit-space'>
                <select name='seccion' id='seccion'>
                    <option value= '0' disabled selected>Seccion</option>
                    <option value='1'>Productos Destacados</option>
                    <option value='2'>Ofertas</option>
                    <option value='3'>No tiene</option>
                </select>
                <% if (locals.errors &&  errors.seccion){ %>
                            
                    <p style="color: #1A5276 ; font-family: Magra;"> <%= errors.seccion.msg %></p>
                   
                <% } %>
            </div>

            <div class='edit-space'>
                <input type='number' name='descuento' placeholder='Porcentaje de Descuento' value='<%= locals.oldData ? oldData.descuento : null %>'>
            </div>

            <div class='edit-space'>
                <input type='text' name='talles' id='talles' placeholder='Talles disponibles de la prenda' value='<%= locals.oldData ? oldData.talles : null %>' class='<%= locals.errors && errors.talles ? "is-invalid" : null %>'>
                <% if (locals.errors &&  errors.talles){ %>
                            
                    <p style="color: #1A5276 ; font-family: Magra;"> <%= errors.talles.msg %></p>
                   
                <% } %>
            </div>

            <div class='edit-space'>
                <input type='text' name='colores' id='colores' placeholder='Colores disponibles de la prenda' value='<%= locals.oldData ? oldData.colores : null %>' class='<%= locals.errors && errors.colores ? "is-invalid" : null %>'>
                <% if (locals.errors &&  errors.colores){ %>
                            
                    <p style="color: #1A5276 ; font-family: Magra;"> <%= errors.colores.msg %></p>
                   
                <% } %>
            </div>

            <div class='edit-space'>
                <input type='text' name='descripcion' id='descripcion' placeholder='Descripcion de la prenda' value='<%= locals.oldData ? oldData.descripcion : null %>'>
                <% if (locals.errors &&  errors.descripcion){ %>
                                
                    <p style="color: #1A5276 ; font-family: Magra;"> <%= errors.descripcion.msg %></p>
                
                <% } %>
            </div>

            <div class='edit-space'>
                <p>Medidas para Env√≠o</p>
                <div class='edit-space-m'>
                    <input type='number' name='ancho' id='ancho' placeholder='Ancho (cm)' value='<%= locals.oldData ? oldData.ancho : null %>'>
                    <% if (locals.errors &&  errors.ancho){ %>
                            
                        <p style="color: #1A5276 ; font-family: Magra;"> <%= errors.ancho.msg %></p>
                       
                    <% } %>
                    <input type='number' name='largo' id='largo' placeholder='Largo (cm)' value='<%= locals.oldData ? oldData.largo : null %>'>
                    <% if (locals.errors &&  errors.largo){ %>
                            
                        <p style="color: #1A5276 ; font-family: Magra;"> <%= errors.largo.msg %></p>
                       
                    <% } %>
                    <input type='number' name='alto' id='alto' placeholder='Alto (cm)' value='<%= locals.oldData ? oldData.alto : null %>'>
                    <% if (locals.errors &&  errors.alto){ %>
                            
                        <p style="color: #1A5276 ; font-family: Magra;"> <%= errors.alto.msg %></p>
                       
                    <% } %>
                </div>
            </div>
            <div class='center-button'>
                <button type='submit' class='save-changes'>Crear Producto</button>
            </div>
        </form>
    </main>
    <%- include('../partials/footer.ejs')%>
    <!-- <script src='/js/product/newProductValidation.js'></script> -->
</body>
</html>